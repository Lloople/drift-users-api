{
  "name": "lloople/drift-users-api",
  "description": "Users API built with Drift. Following Marc Morera's Event Driven PHP course.",
  "type": "project",
  "license": "MIT",

  "require": {
    "php": "^7.3",
    "symfony/console": "^5.0.0",
    "symfony/framework-bundle": "^5.0.0",
    "symfony/dotenv": "^5.0.0",
    "symfony/stopwatch": "^5.0.0",
    "drift/http-kernel": "^0.1.3",
    "drift/server": "^0.1.2",
    "drift/react-functions": "^0.1",
    "drift/command-bus-bundle": "*",
    "drift/dbal-bundle": "^0.1.2",
    "clue/reactphp-sqlite": "^1.0",
    "react/mysql": "^0.5.4",
    "drift/event-bus-bundle": "^0.1.8",
    "drift/amqp-bundle": "^0.1.2"
  },

  "require-dev": {
    "drift/phpunit-bridge": "^0.1.1"
  },

  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "Domain\\": "src/Domain",
      "Infrastructure\\": "src",
      "Drift\\": "Drift/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"

    }
  }
}
